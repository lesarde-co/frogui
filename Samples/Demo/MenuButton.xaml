<Button x:Class="Demo.MenuButton"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="namespace:Demo"
		>

	<Button.AssetSheet>
		<Styles>
			<Style Name="DefaultButton" TargetType="local:MenuButton" IsDefault="true"
				Margin = "5px"
				BorderThickness = "1px"
				Background="LinearGradientBrush(ToBottom, #3f92c6 0%, #2574a3 56%, #1d5f88 64%, #1d5f88 100%)"
				BorderBrush = "SlateBlue"
				CornerRadius = "0px, 5px, 5px, 12px"
				Padding = "4px"
				Command="local:MainWindow.Commands.RunDemo"
				>

				<VisualStateManager>
					<VisualStateGroup Name="Common">
						<VisualState Name="PointerEntered"
							Background="LinearGradientBrush(ToBottom, #5BADE1 0%, #53A7D8 46%, #3378A3 74%, #3378A3 100%)"
							BorderBrush="#AD99FE"
							/>
						<VisualState Name="Pressed"
							Background="LinearGradientBrush(ToBottom, #3184B8 0%, #1E6B99 46%, #144F64 74%, #144F64 100%)"
							BorderBrush="#5241BB"
							/>
					</VisualStateGroup>
				</VisualStateManager>

			</Style>
		</Styles>
	</Button.AssetSheet>

	<TextBlock Name="e_text"
		Foreground="White"
		HorizontalAlignment="Center"
		IsHitTestVisible="false"
		Selectable="false"
		/>

</Button>

<Decorator x:Class="Demo.Example_Popup.View"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:root="namespace:Demo"
		xmlns:local="namespace:Demo"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		>
	<Grid Width="300px" Height="300px" TranslateY="-150px" >
		<Border UseAbsolutePosition="true" Background="root:SolidColorBrushes.DarkBlue.Brush" BorderThickness="1.5px" BorderPattern="Solid" BorderBrush="root:SolidColorBrushes.LightBlue.Brush">
			<Popup Name="e_popup">
				<TextBlock Name="e_textBlock" Text="local:Common.LoremIpsum" Background="root:SolidColorBrushes.White.Brush" />
			</Popup>
		</Border>
		<TextBlock Text="parent" Foreground="root:SolidColorBrushes.White.Brush" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="Medium"/>
	</Grid>
</Decorator>

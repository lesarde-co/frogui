<Flex x:Class="Demo.Example_CheckBox.View"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:root="namespace:Demo"
		xmlns:local="namespace:Demo.Example_CheckBox"
		Margin="16px"
		Direction="Column"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		>

	<Flex.AssetSheet>
		<Styles>
			<Style Name="FunCheckBox" TargetType="CheckBox"
				Margin = "5px"
				Foreground="root:SolidColorBrushes.White.Brush"
				CheckBrush="root:SolidColorBrushes.Black.Brush"
				Background="root:SolidColorBrushes.White.Brush"
				BorderBrush="root:SolidColorBrushes.Black.Brush"
				FontSize="Small"
				>
				<VistaManager>
					<VistaGroup Name="Common">
						<Vista Name="Hovered"
						Background="root:SolidColorBrushes.LightBlue.Brush"
						/>
					</VistaGroup>
				</VistaManager>
			</Style>
		</Styles>
	</Flex.AssetSheet>

	<CheckBox Name="e_checkBox" Style="FunCheckBox" />

</Flex>
